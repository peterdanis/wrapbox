{
  "name": "wrapbox",
  "productName": "Wrapbox",
  "description": "An Electron wrapper for web pages",
  "version": "0.1.7",
  "license": "MIT",
  "author": "Peter Danis <peter.danis@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/peterdanis/wrapbox"
  },
  "main": "app/app.js",
  "scripts": {
    "build": "electron-builder -p never",
    "cover": "nyc --clean jest --coverage",
    "dist": "electron-builder",
    "lint": "eslint .",
    "pack": "electron-builder --dir",
    "start": "electron .",
    "test-e2e": "jest --noStackTrace e2e",
    "test-i": "jest --noStackTrace integration",
    "test-u": "jest --noStackTrace unit",
    "test": "jest --noStackTrace",
    "watch-st": "jest --watch --notify",
    "watch": "jest --watch --noStackTrace --notify"
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.js",
      "!app/dependencies/**"
    ],
    "coverageReporters": [
      "json"
    ],
    "reporters": [
      "default",
      "jest-junit"
    ]
  },
  "jest-junit": {
    "outputDirectory": "./coverage",
    "outputName": "./junit.xml"
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "tempDir": "./coverage",
    "exclude": [
      "app/dependencies/**",
      "tests/**"
    ],
    "instrument": false
  },
  "eslintIgnore": [
    "app/dependencies/**",
    "coverage/**",
    "release-builds/**"
  ],
  "build": {
    "appId": "com.peterdanis.wrapbox",
    "productName": "Wrapbox",
    "copyright": "Copyright Â© 2018 Peter Danis",
    "asar": false,
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "icons/icon.ico",
      "verifyUpdateCodeSignature": false
    },
    "mac": {
      "artifactName": "${name}-${version}-mac.${ext}",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icons/icon.icns"
    },
    "linux": {
      "artifactName": "${name}-${version}.${ext}",
      "category": "Utility",
      "target": [
        "AppImage"
      ],
      "icon": "icons/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}_Installer.${ext}"
    },
    "portable": {
      "useZip": true,
      "artifactName": "${productName}_Portable.${ext}"
    },
    "dmg": {
      "artifactName": "${name}-${version}.${ext}",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 420,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "app/**"
    ],
    "directories": {
      "output": "./release-builds"
    }
  },
  "dependencies": {
    "electron-log": "^3.0.5",
    "electron-updater": "4.0.6"
  },
  "devDependencies": {
    "@types/jest": "^24.0.13",
    "@types/puppeteer": "1.12.4",
    "@types/react": "16.3.13",
    "babel-register": "^6.26.0",
    "electron": "4.1.4",
    "electron-builder": "20.40.2",
    "eslint": "^5.16.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.17.2",
    "eslint-plugin-jest": "^22.5.1",
    "eslint-plugin-jsx-a11y": "^6.2.1",
    "eslint-plugin-react": "^7.13.0",
    "eslint-plugin-security": "^1.4.0",
    "jest": "^24.8.0",
    "jest-image-snapshot": "^2.8.2",
    "jest-junit": "^6.4.0",
    "nyc": "^14.0.0",
    "prettier-eslint": "^8.8.2",
    "prettier-stylelint": "^0.4.2",
    "puppeteer-core": "1.16.0",
    "stylelint": "^10.0.1",
    "stylelint-config-standard": "^18.3.0"
  }
}
