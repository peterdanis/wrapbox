{
  "name": "wrapbox",
  "productName": "Wrapbox",
  "description": "An Electron wrapper for web pages",
  "version": "0.0.6",
  "license": "MIT",
  "author": "Peter Danis <peter.danis@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/peterdanis/wrapbox"
  },
  "main": "app/app.js",
  "scripts": {
    "build": "electron-builder -p never",
    "cover": "nyc --clean jest --coverage",
    "dist": "electron-builder",
    "lint": "eslint **/*.js",
    "pack": "electron-builder --dir",
    "start": "electron .",
    "test-e2e": "jest --noStackTrace e2e",
    "test-i": "jest --noStackTrace integration",
    "test-u": "jest --noStackTrace unit",
    "test": "jest --noStackTrace",
    "watch-st": "jest --watch --notify",
    "watch": "jest --watch --noStackTrace --notify"
  },
  "jest": {
    "collectCoverageFrom": ["app/**/*.js", "!app/dependencies/**"],
    "coverageReporters": ["json"]
  },
  "nyc": {
    "reporter": ["lcov", "text"],
    "tempDirectory": "./coverage",
    "exclude": ["app/dependencies/**", "tests/**"],
    "instrument": false
  },
  "eslintIgnore": ["app/dependencies/**", "coverage/**", "release-builds/**"],
  "build": {
    "appId": "com.peterdanis.wrapbox",
    "productName": "Wrapbox",
    "copyright": "Copyright Â© 2018 Peter Danis",
    "asar": false,
    "win": {
      "artifactName": "${productName}_v${version}.${ext}",
      "target": ["nsis", "portable", "zip"],
      "icon": "icons/icon.ico",
      "electronUpdaterCompatibility": ">=2.16"
    },
    "mac": {
      "artifactName": "${name}_v${version}.${ext}",
      "category": "public.app-category.productivity",
      "target": ["dmg", "pkg"],
      "icon": "icons/icon.icns"
    },
    "linux": {
      "artifactName": "${name}_v${version}.${ext}",
      "category": "Utility",
      "target": ["AppImage", "deb", "rpm", "snap"],
      "icon": "icons/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}_v${version}_Installer.${ext}"
    },
    "portable": {
      "useZip": true,
      "artifactName": "${productName}_v${version}_Portable.${ext}"
    },
    "dmg": {
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 240,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "snap": {
      "artifactName": "${name}_v${version}.${ext}"
    },
    "files": ["app/**"],
    "directories": {
      "output": "./release-builds"
    }
  },
  "dependencies": {
    "electron-log": "^2.2.14",
    "electron-updater": "^2.21.10"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "electron": "1.8.4",
    "electron-builder": "^20.13.4",
    "electron-reload": "^1.2.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.12.0",
    "eslint-plugin-jest": "^21.17.0",
    "eslint-plugin-jsx-a11y": "^6.0.3",
    "eslint-plugin-react": "^7.8.2",
    "jest": "^23.0.1",
    "jest-image-snapshot": "^2.4.2",
    "nyc": "^11.8.0",
    "prettier-eslint": "^8.7.4",
    "prettier-stylelint": "^0.4.2",
    "spectron": "~3.8.0",
    "stylelint": "^9.2.1",
    "stylelint-config-standard": "^18.0.0"
  }
}
