{
  "name": "wrapbox",
  "productName": "Wrapbox",
  "description": "An Electron wrapper for web pages",
  "version": "0.1.6",
  "license": "MIT",
  "author": "Peter Danis <peter.danis@outlook.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/peterdanis/wrapbox"
  },
  "main": "app/app.js",
  "scripts": {
    "build": "electron-builder -p never",
    "cover": "nyc --clean jest --coverage",
    "dist": "electron-builder",
    "lint": "eslint .",
    "pack": "electron-builder --dir",
    "start": "electron .",
    "test-e2e": "jest --noStackTrace e2e",
    "test-i": "jest --noStackTrace integration",
    "test-u": "jest --noStackTrace unit",
    "test": "jest --noStackTrace",
    "watch-st": "jest --watch --notify",
    "watch": "jest --watch --noStackTrace --notify"
  },
  "jest": {
    "collectCoverageFrom": [
      "app/**/*.js",
      "!app/dependencies/**"
    ],
    "coverageReporters": [
      "json"
    ]
  },
  "nyc": {
    "reporter": [
      "lcov",
      "text"
    ],
    "tempDirectory": "./coverage",
    "exclude": [
      "app/dependencies/**",
      "tests/**"
    ],
    "instrument": false
  },
  "eslintIgnore": [
    "app/dependencies/**",
    "coverage/**",
    "release-builds/**"
  ],
  "build": {
    "appId": "com.peterdanis.wrapbox",
    "productName": "Wrapbox",
    "copyright": "Copyright Â© 2018 Peter Danis",
    "asar": false,
    "win": {
      "target": [
        "nsis",
        "portable",
        "zip"
      ],
      "icon": "icons/icon.ico",
      "publisherName": "Wrapbox"
    },
    "mac": {
      "artifactName": "${name}-${version}-mac.${ext}",
      "category": "public.app-category.productivity",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "icons/icon.icns",
      "electronUpdaterCompatibility": ">=2.16"
    },
    "linux": {
      "artifactName": "${name}-${version}.${ext}",
      "category": "Utility",
      "target": [
        "AppImage"
      ],
      "icon": "icons/icon.icns"
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "artifactName": "${productName}_Installer.${ext}"
    },
    "portable": {
      "useZip": true,
      "artifactName": "${productName}_Portable.${ext}"
    },
    "dmg": {
      "artifactName": "${name}-${version}.${ext}",
      "contents": [
        {
          "x": 110,
          "y": 150
        },
        {
          "x": 420,
          "y": 150,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "files": [
      "app/**"
    ],
    "directories": {
      "output": "./release-builds"
    }
  },
  "dependencies": {
    "electron-log": "^2.2.17",
    "electron-updater": "^3.2.3"
  },
  "devDependencies": {
    "@types/jest": "^23.3.9",
    "electron": "3.0.8",
    "electron-builder": "20.36.1",
    "eslint": "^5.9.0",
    "eslint-config-airbnb": "^17.1.0",
    "eslint-plugin-import": "^2.14.0",
    "eslint-plugin-jest": "^22.0.0",
    "eslint-plugin-jsx-a11y": "^6.1.2",
    "eslint-plugin-react": "^7.11.1",
    "jest": "^23.6.0",
    "jest-image-snapshot": "^2.7.0",
    "nyc": "^13.0.1",
    "prettier-eslint": "^8.8.2",
    "prettier-stylelint": "^0.4.2",
    "spectron": "~5.0.0",
    "stylelint": "^9.8.0",
    "stylelint-config-standard": "^18.0.0"
  }
}
